{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CrewAI Desktop",
  "version": "0.1.0",
  "identifier": "com.crewai.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "width": 1200,
        "resizable": true,
        "title": "CrewAI Desktop"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["backend/*"],
    "externalBin": ["backend/main.py"]
  },
  "plugins": {
    "shell": {
      "scope": {
        "name": "python",
        "cmd": "python",
        "args": true
      }
    }
  }
}
